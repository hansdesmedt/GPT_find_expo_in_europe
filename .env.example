# OpenAI/Trellis API Configuration
# Base URL for the AI service used to parse exhibition data
OPENAI_BASE_URL=
OPENAI_API_BASE=
# API key for ChatITP/Trellis service
CHATITP_API_KEY=your_chatitp_api_key_here

# Google Maps API Key
# Used for geocoding cities and displaying the map
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# For local development:
DATABASE_URL=postgresql://localhost:5432/expo_finder
# For Railway or other hosted services, this will be automatically set

# Server Configuration
PORT=3000
NODE_ENV=development
